#include "holberton.h"

int create_file(const char *filename, char *text_content)
{
	int fd, i = 0;

	if (filename == NULL)
		return (-1);
	fd = open(filename, O_CREAT | O_TRUNC | O_RDWR, 0600);
	if (fd == -1)
		return (-1);
	while (text_content[i] != '\0')
		i++;
	if (write(fd, text_content, i) == -1)
		return (-1);
	return (1);
}
